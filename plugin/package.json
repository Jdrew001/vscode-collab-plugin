{
  "name": "vscode-collab-plugin",
  "displayName": "vscode-collab-plugin",
  "publisher": "Pascal-D",
  "description": "VSCode collaboration plugin with active users, chat, and server control features.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/sekassel-research/vscode-collab-plugin"
  },
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-collab-plugin.userMapItemClick",
        "title": "User Map Item Click"
      },
      {
        "command": "vscode-collab.startServerWithLAN",
        "title": "Start Collaboration Server with LAN"
      },
      {
        "command": "vscode-collab.joinServer",
        "title": "Join Collaboration Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscode-collab",
          "title": "VS-Code Collab",
          "icon": "media/HandshakeDavid.svg"
        }
      ]
    },
    "views": {
      "vscode-collab": [
        {
          "id": "vscode-collab-activeUsers",
          "name": "Active Users"
        },
        {
          "type": "webview",
          "id": "vscode-collab-chatView",
          "name": "Chat"
        },
        {
          "id": "vscode-collab-serverControl",
          "name": "Server Control"
        }
      ]
    },
    "configuration": {
      "title": "vscode-collab",
      "properties": {
        "vscode-collab.ws-address": {
          "type": "string",
          "default": "ws://localhost:8080",
          "description": "In this setting, the websocket server address can be changed."
        },
        "vscode-collab.displayMode": {
          "type": "string",
          "default": "name",
          "enum": [
            "id",
            "name",
            "displayName"
          ],
          "description": "Select whether to display the users' ID, name, or display name."
        },
        "vscode-collab.textDocumentChangesBufferTime": {
          "type": "number",
          "default": 150,
          "description": "Time (in ms) before sending outgoing text changes."
        },
        "vscode-collab.receivedDocumentChangesBufferTime": {
          "type": "number",
          "default": 50,
          "description": "Time (in ms) before applying incoming document changes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3",
    "@types/ws": "^8.5.4"
  },
  "dependencies": {
    "rxjs": "^7.8.1",
    "ws": "^8.11.0"
  }
}